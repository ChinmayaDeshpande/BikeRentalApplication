<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ForgotPass"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="13"
    android:gravity="center"
   >

    <EditText
        android:id="@+id/forgot_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email or Username"
        android:textColorHint="@color/black"
        android:layout_marginHorizontal="50dip"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button_border"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/forgot_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get otp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginHorizontal="90dip"
        android:background="@drawable/high_priority_button"
        android:autoSizeTextType="uniform"
        />


</LinearLayout>